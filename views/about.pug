extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- Add your name.
        h1  #{personInfo.name} 

        //- Feel free personalize the title below
        p.lead.text-light
          | #{personInfo.description}

        //- Replace the boilerplate below with your Elevator pitch below.
        .portfolio-bio
          each info in personInfo.bio
            p #{info}
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Skills

        //- Replace the text in the li tags below with your own skills.  At this point, you should be able to list at least ten skills.
        ul
          each skill in personInfo.skills
            li #{skill}
        h6 Contact Info

        //- Add your own contact info
        ul
          li zeno.k.tech@gmail.com

        //- Add URLs to the hrefs below to link to your social media accounts.
        a.button.expanded(href='https://linkedin.com/in/zenok') LinkedIn
        a.button.expanded(href='https://github.com/FourSeasonK') GitHub
        a.button.expanded(href='https://zenok.notion.site/') Software Engineering Portfolio
        a.button.expanded(href='https://sites.google.com/view/oksonia') Artwork Portfolio
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  